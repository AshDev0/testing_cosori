<section id="why-cosori">
    <div class="why-cosori">
        <h2>{{section.settings.heading}}</h2>
        <div class="content">
            <div class="items">
                {% assign info = product.metafields.why_cos.why_cos_text %}
                {% for value in info %}
                <div class="item">
                    <img src="{{product.metafields.why_cos.why_cos_img[forloop.index0]}}" alt="" />
                    <p>{{value}}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% schema %}
  {
    "name": "Why Cosori",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type":"text",
            "id": "heading",
            "label": "Main Heading"
          }
    ],
    "presets": [
      {
        "name": "Why Cosori",
        "settings": {
        }
      }
    ]
  }
{% endschema %}